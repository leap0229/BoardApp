<!DOCTYPE html>
<html>
<%- include('partials/header'); %>

<body>
    <main>
        <div id="conatiner">
            <form action="/posts/new" method="POST">
                <p>
                    title<input type="text" name="title" <% if (locals.title) { %>value=<%= title%><% } %>>
                    <% if (locals.errorMessages && errorMessages['title']) { %>
                    <label><%= errorMessages['title'] %></label>
                    <% } %>
                </p>
                <p>
                    content
                    <textarea name="content" rows="10"><% if (locals.content) { %><%= content%><% } %></textarea>
                    <% if (locals.errorMessages && errorMessages['content']) { %>
                    <label><%= errorMessages['content'] %></label>
                    <% } %>
                </p>
                <input type="submit" value="new Post">
            </form>
        </div>
    </main>
</body>

</html>